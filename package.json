{
  "name": "justAntlr",
  "displayName": "justAntlr",
  "description": "A simple tool for operating antlr",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DominguitoLamo/justAntlr"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:justAntlr.build",
    "onCommand:justAntlr.genAST",
    "onCommand:justAntlr.inputInteractive"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
          "id": "justAntlr",
          "aliases": [
              "ANTLR",
              "antlr"
          ],
          "extensions": [
              ".g",
              ".g4"
          ],
          "firstLine": "^(lexer|parser)?\\s*grammar\\s*\\w+\\s*;"
      }
    ],
    "commands": [
      {
        "command": "justAntlr.build",
        "title": "justAntlr: build"
      },
      {
        "command": "justAntlr.genAST",
        "title": "justAntlr: generate AST gui"
      },
      {
        "command": "justAntlr.inputInteractive",
        "title": "justAntlr: interactive input"
      }
    ],
    "menus": {
      "editor/context": [
        {
            "when": "editorHasSelection && resourceLangId == justAntlr",
            "command": "justAntlr.genAST",
            "group": "justAntlr@1"
        },
        {
          "when": "editorHasSelection && resourceLangId == justAntlr",
          "command": "justAntlr.inputInteractive",
          "group": "justAntlr@1"
      }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "fs-extra": "^10.1.0",
    "iconv-lite": "^0.6.3"
  }
}
